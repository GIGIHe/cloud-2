/* pages/detail/detail.wxss */
.details .book-details{
padding: 20rpx 20rpx 40rpx 20rpx;
border-bottom: 8rpx solid #888
}
.book-t{
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #444;
}
.book-t .title{
font-size: 14px;
font-weight: 700;
}
.book-t image{
  width: 220rpx;
  height:280rpx;
}
.book-t .main-msg{
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.book-b {
  display: flex;
  justify-content: space-around;
  margin-top: 50rpx;
}
.book-b .btn{
  color: #333;
  margin: 0;
  width: 300rpx;
  font-size: 12px;
  background: #e9e9e9;
  border:1px solid #e9e9e9;
}
/* 简介 */
.book-desc{
  padding: 30rpx 20rpx;
  font-size: 12px;
  line-height: 1.5; 
  border-bottom: 2px solid #e9e9e9;
}
.book-desc .title{
  font-weight: 700;
  font-size: 15px;
}
.desc-main{
  font-size: 12px;
  color: #333;
  margin-top: 50rpx;
}
/* 查看目录 */
 .book-catalog{
   display: flex;
   line-height: 100rpx;
   height: 100rpx;
   justify-content: space-between;
   padding: 0 20rpx;
 }
 .catelog-l{
   display: flex;
   justify-content: space-around;
   width: 300rpx;
 }
 .catelog-l .title{
   font-size: 15px;
   font-weight: 700;
   color: #333;
 }
 .catalogs{
font-size: 12px;
color: #444;
 }
 .update-time{
   font-size: 10px;
   color: #444;
 }
.read-btn{
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  padding: 20rpx;
  box-shadow: 0 0 2px 2px rgba(0, 0, 0, .2)
}
.read-btn .b-btn{
  background: #409eff;
  color: #fff;
  font-size: 12px;
  margin: 0;
}