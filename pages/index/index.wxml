<view class='container'>
<image src='/static/img/loading.svg' class="loading" wx:if="{{isLoading}}"></image>
  <view wx:else>
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{swiperData}}" wx:key="{{index}}" bindtap="jump">
      <swiper-item>
        <image src="{{item.img}}" class="slide-image" width="355" height="150" bindtap="jump" data-id="{{item.book._id}}" />
      </swiper-item>
    </block>
  </swiper>
  <view class='main-content'>
    <view class='content-item' wx:for="{{mainContent}}" wx:key="{{index}}">
      <view class='title'>{{item.title}}</view>
      <view class='content' wx:for="{{item.books}}" wx:key="{{index}}">
        <view class='box-l'>
          <image src='{{item.img}}'></image>
        </view>
        <view class='box-r'>
          <view class='mr'>
            <view class='book-title'>{{item.title}}</view>
            <view class='book-desc'>{{item.desc}}</view>
          </view>
          <view class='author'>
            <text class='author-l'>{{item.author}}</text>
            <view class='author-r'>
              <text class='update-time'>一天前</text>
              <text class='category'>后台开发</text>
              <text class='many'>{{item.looknums}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
</view>