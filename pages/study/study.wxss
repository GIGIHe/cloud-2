/* pages/study/study.wxss */
.box{
  display: flex;
  margin-top: 40rpx;
  height: 300rpx;
}
.box-l{
  width: 220rpx;
  height: 290rpx;
  margin-right: 20rpx;
}
.box-l .box-l-img{
  width: 100%;
  height: 100%;
}
.box-r{
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.box-r .title{
  font-size: 16px;
  font-weight: 400;
}
.box-r .chapter{
  font-size: 12px;
  color:rgba(116, 100, 100);
}
.box-r .btn{
  display: flex;
  justify-content: space-between;
}
.box-r .btn .btn-l,
.box-r .btn .btn-r
{
  font-size: 12px;
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-right: 10rpx;
  color: rgb(43, 39, 39);
  text-align: center;
}
.total{
  margin-top: 40rpx;
  text-align: center;
  font-size: 14px;
  color: #444;
}